@import "variables"
.card-contribute
  background: $grey-drk

  a
    margin: auto
    font-size: 18px
    line-height: 22px
    padding: 31px 20px 71px

    &:after
      {centerHoriz}
      width: 40px
      height: @width
      padding: 10px 0
      font-size: 40px
      line-height: 15px
      bottom: 50%
      margin-bottom: -50px
      background: white(.5)
      border-radius: 50%
      content: '+'
      color: white
      text-align: center
      text-shadow: none
      transition(all .2s ease-in)

  &:hover
    a:after
      background: $blue

  @media (min-width: 401px)
    a
      font-size: 22px
      line-height: 28px
      padding: 50px 20px 110px

      &:after
        width: 50px
        height: @width
        padding: 13px 0
        margin-bottom: -60px
        font-size: 50px
